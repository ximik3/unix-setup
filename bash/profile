# set PATH so it includes user's private bin directories
PATH="$HOME/bin:$HOME/.local/bin:$PATH"
CATALINA_HOME="/home/user/tomcat7"
EDITOR="vim"
case $(uname -s) in
  Linux*) JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk-amd64 ;;
  Darwin*) JAVA_HOME=`/usr/libexec/java_home -v 1.8` ;;
esac
case $(uname -s) in
  Linux*) GRADLE_HOME=/opt/gradle/gradle-4.7/bin ;;
  Darwin*) GRADLE_HOME="" ;;
esac
PATH=$PATH:$GRADLE_HOME
